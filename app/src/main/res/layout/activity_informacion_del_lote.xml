    <TextView
        android:id="@+id/txtLatitud"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="@string/latitud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="@string/longitud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLatitud" />

    <TextView
        android:id="@+id/tvLatitud"
        android:layout_width="160dp"
        android:layout_height="25sp"
        android:layout_marginStart="52dp"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toEndOf="@+id/txtLatitud"
        app:layout_constraintTop_toTopOf="@+id/txtLatitud" />

    <TextView
        android:id="@+id/tvLongitud"
        android:layout_width="160dp"
        android:layout_height="25sp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/tvLatitud" />

    <Button
        android:id="@+id/btnNuevoProyectoCultivo"
        android:layout_width="225dp"
        android:layout_height="46dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_rounded"
        android:text="Nuevo Proyecto de Cultivo"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHumedad" />

    <Button
        android:id="@+id/btnVerHistorial"
        android:layout_width="225dp"
        android:layout_height="46dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_rounded"
        android:text="Proyectos Registrados"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNuevoProyectoCultivo" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Nombre:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tvNombreLoteInf"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/nombre"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>