<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Campo.TodosLosCampos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/etBuscar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:backgroundTint="#08E976"
            android:ems="10"
            android:hint="Busque el campo por su nombre"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#151516" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#202537">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnFlotanteNuevoCampo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="232dp"
        android:layout_marginTop="380dp"
        android:clickable="true"
        android:tint="#0B23F0"
        app:backgroundTint="#F3EFF2"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>