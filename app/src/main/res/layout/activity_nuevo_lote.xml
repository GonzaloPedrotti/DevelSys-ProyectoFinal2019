<?xml version="1.0" encoding="utf-8"?>




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--por debajo tiene una barra con dos botones-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAyuda"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_rounded2"
            android:onClick="cambiarHibrido"
            android:text="Ayuda"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:textColorLink="#0288D1"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/txtNombreLote"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#0097A7"
            android:ems="10"
            android:hint="Nombre Lote"
            android:inputType="textPersonName"
            android:maxLength="50"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="#E9EEF1"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/txtTamano"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#0097A7"
            android:ems="10"
            android:hint="HectÃ¡reas"

            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="#E9EEF1"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btnRegistrarLote"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_rounded2"
            android:enabled="true"
            android:text="Registrar"
            android:textColor="@android:color/white"
            android:textColorHint="#0F0F0F"
            android:textColorLink="#0288D1"
            android:textSize="10dp" />


    </LinearLayout>

    <!--Este es el fragmento del mapa-->

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
