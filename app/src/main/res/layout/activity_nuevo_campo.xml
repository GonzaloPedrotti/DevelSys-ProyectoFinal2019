<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--por debajo tiene una barra con dos botones-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:backgroundTint="#FFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAyuda"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="cambiarHibrido"
            android:text="Ayuda"
            android:textColorLink="#0288D1"
            android:textSize="10dp"
            android:background="@drawable/button_rounded"
            />

        <Button
            android:id="@+id/btnProyectosActuales"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="true"
            android:text="Registrar"
            android:textColorLink="#0288D1"
            android:background="@drawable/button_rounded"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/txtNombreLote"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Nombre Campo"
            android:inputType="textPersonName"
            android:maxLength="50"
            android:backgroundTint="#0097A7"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="#161516"
            android:textSize="12dp" />


    </LinearLayout>

    <!--Este es el fragmento del mapa-->

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NuevoCampo.NuevoCampo" />


