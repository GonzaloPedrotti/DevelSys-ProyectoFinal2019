<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividad.ItemActividad">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Actividad:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etActividad"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnActualizarActividad"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="20dp"
        android:text="ACTUALIZAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eth1" />

    <ImageButton
        android:id="@+id/btnFechaInicioNueva"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="#0BBE0E"
        android:src="@drawable/ic_event_white_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/etf1"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Fecha Inicio"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/btnFechaInicioNueva"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnFechaFinNueva"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="#303F9F"
        app:layout_constraintStart_toEndOf="@+id/etf1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_event_white_24dp" />

    <ImageButton
        android:id="@+id/btnHoraInicioNueva"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#0BBE0E"
        android:src="@drawable/ic_access_time_white_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFechaInicioNueva"
        tools:ignore="ContentDescription" />


    <ImageButton
        android:id="@+id/btnHoraFinNueva"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#303F9F"
        app:layout_constraintStart_toEndOf="@+id/eth1"
        app:layout_constraintTop_toBottomOf="@+id/btnFechaFinNueva"
        app:srcCompat="@drawable/ic_access_time_white_24dp" />

    <EditText
        android:id="@+id/etf2"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Fecha Fin"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/btnFechaFinNueva"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eth1"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Hora Inicio"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/btnHoraInicioNueva"
        app:layout_constraintTop_toBottomOf="@+id/etf1" />

    <EditText
        android:id="@+id/eth2"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Hora Fin"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/btnHoraFinNueva"
        app:layout_constraintTop_toBottomOf="@+id/etf2" />

</androidx.constraintlayout.widget.ConstraintLayout>