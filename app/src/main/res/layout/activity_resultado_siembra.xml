<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoSiembra">

    <TextView
        android:id="@+id/tvActividadResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:enabled="true"
        android:fontFamily="sans-serif-black"
        android:inputType="textPersonName"
        android:text="Finalización de Siembra"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnf1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#0E23E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvActividadResultado"
        app:srcCompat="@drawable/ic_event_white_24dp" />

    <ImageButton
        android:id="@+id/btnf2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#0E9DDF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvActividadResultado"
        app:srcCompat="@drawable/ic_event_white_24dp" />

    <ImageButton
        android:id="@+id/btnh1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#0E23E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnf1"
        app:srcCompat="@drawable/ic_access_time_white_24dp" />

    <ImageButton
        android:id="@+id/btnh2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#0E9DDF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnf2"
        app:srcCompat="@drawable/ic_access_time_white_24dp" />

    <EditText
        android:id="@+id/etDescripcionActividad"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Ingrese alguna descripción"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etHora1Real" />

    <EditText
        android:id="@+id/etFecha1Real"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Fecha Inicio"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/btnf1"
        app:layout_constraintTop_toBottomOf="@+id/tvActividadResultado" />

    <EditText
        android:id="@+id/etHora1Real"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Hora Inicio"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/btnh1"
        app:layout_constraintTop_toBottomOf="@+id/etFecha1Real" />

    <EditText
        android:id="@+id/etFecha2Real"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Fecha Fin"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/btnf2"
        app:layout_constraintTop_toBottomOf="@+id/tvActividadResultado" />

    <EditText
        android:id="@+id/etHora2Real"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Hora Fin"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/btnh2"
        app:layout_constraintTop_toBottomOf="@+id/etFecha2Real" />

    <Button
        android:id="@+id/btnGuardarResultado"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:background="#25B459"
        android:text="Guardar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDescripcionActividad" />

    <EditText
        android:id="@+id/etDosisReal"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Kg de Semillas Utilizados"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDescripcionActividad" />

</androidx.constraintlayout.widget.ConstraintLayout>