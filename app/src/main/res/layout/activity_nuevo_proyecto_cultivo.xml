    <TextView
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="100dp"
        android:text="Seleccione Cultivo:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="@string/periodoDeCultivo"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spCultivo" />

    <Spinner
        android:id="@+id/spCultivo"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:background="#9A529EE4"
        android:outlineAmbientShadowColor="#C17E207C"
        android:outlineSpotShadowColor="#0C7516"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tvPeriodo1"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="72dp"
        android:background="#9A529EE4"
        android:outlineAmbientShadowColor="#C17E207C"
        android:outlineSpotShadowColor="#0C7516"
        android:text="Periodo"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spCultivo" />

    <Button
        android:id="@+id/btnRegistrarProyectoCultivo"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_rounded"
        android:text="Registrar Proyecto"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPeriodo1" />

    <EditText
        android:id="@+id/tvNombreProyecto"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Nombre del Proyecto"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>